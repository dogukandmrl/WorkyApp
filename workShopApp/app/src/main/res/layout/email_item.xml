<!-- res/layout/custom_workshop_item.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/title_image"
        android:layout_marginStart="16dp"
        android:text="Başlık" />

    <!-- E-posta konusu için TextView -->
    <TextView
        android:id="@+id/tvEmailSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHeading"
        android:layout_marginTop="8dp"
        android:text="E-posta Konusu" />

    <!-- E-posta içeriği için TextView -->
    <TextView
        android:id="@+id/tvEmailContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEmailSubject"
        android:layout_marginTop="8dp"
        android:text="E-posta İçeriği" />
</RelativeLayout>
