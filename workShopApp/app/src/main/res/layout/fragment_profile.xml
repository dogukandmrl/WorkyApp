<!-- res/layout/fragment_profile_edit.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ProfileFragment"
    android:background="@drawable/wave__2_">

    <!-- Kullanıcı Adı Düzenleme -->
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kullanıcı Adı"
        android:inputType="text"
        android:maxLines="1"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!-- E-posta Düzenleme -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-posta Adresi"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!-- Yaş ve Cinsiyet Düzenleme (Side by Side) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Yaş"
            android:inputType="number"
            android:maxLines="1"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etGender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Cinsiyet"
            android:inputType="text"
            android:maxLines="1"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Meslek Düzenleme -->
    <EditText
        android:id="@+id/etOccupation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Meslek"
        android:inputType="text"
        android:maxLines="1"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!-- Eğitim Durumu Düzenleme -->
    <EditText
        android:id="@+id/etEducation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Eğitim Durumu"
        android:inputType="text"
        android:maxLines="1"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!-- Hobiler Düzenleme -->
    <EditText
        android:id="@+id/etHobbies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hobiler"
        android:inputType="text"
        android:maxLines="1"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:textStyle="bold"/>



    <!-- Profil Fotoğrafı Görüntüleme -->
    <ImageView
        android:id="@+id/ivProfilePhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/profilephoto" />

    <!-- Kaydetme Butonu -->
    <Button
        android:id="@+id/btnSaveProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bilgileri Kaydet"
        android:backgroundTint="#0ED6B9"
        android:textColor="#FFFF"
        android:textSize="30sp"
        android:textStyle="bold"/>

</LinearLayout>
